{%- if auth_backends %}

{%- if auth_cache_time %}
proxy_cache_path /var/lib/nginx/proxy/cache levels=1:2 keys_zone=auth:50m;
{% endif %}

upstream auth_backend {
  {%- for host, port in auth_backends %}
    server {{ host }}:{{ port }};
  {%- endfor %}
}
{% endif %}

server {
    server_name {{ domain }};

    listen {{ port }};
    listen [::]:{{ port }};

    root {{ document_root }};

    location / {
      {%- if auth_backends %}
        auth_request /auth;
      {%- else %}
        auth_basic "{{ domain }} archive";
        auth_basic_user_file {{ basic_auth_file }};
      {%- endif %}
        autoindex on;
    }

  {% if auth_backends %}
    location = /auth {
        internal;
        proxy_pass http://auth_backend/auth-check/;
      {%- if auth_cache_time %}
        proxy_cache auth;
        proxy_cache_key $http_authorization;
        proxy_cache_methods GET;
        proxy_cache_valid 200 {{ auth_cache_time }};
      {%- endif %}
    }
  {%- endif %}
}

